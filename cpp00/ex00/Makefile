# ============================================================================= #
                                                      
NAME		= megaphone

# ============================================================================= #

SRCS		= megaphone.cpp \

# ============================================================================= #

BASE_SRC	= $(addprefix srcs/, $(SRCS))

# ============================================================================= #

BASE_OBJS	= $(BASE_SRC:.cpp=.o)

ALL_OBJS	= $(BASE_OBJS)

# ============================================================================= #

LDFLAGS		= 

# ============================================================================= #

CC			= c++

CFLAGS		= -Wall -Wextra -Werror -I./includes/ -std=c++98

RM			= rm -f

.c.o:
	$(CC) $(CFLAGS) -c $< -o ${<:.cpp=.o}

$(NAME):	$(ALL_OBJS)
	$(CC) $(CFLAGS) $(ALL_OBJS) $(LDFLAGS) -o $(NAME)

# ============================================================================= #

all:	$(NAME)

clean:
	$(RM) $(ALL_OBJS)

fclean:	clean
	$(RM) $(NAME)

re:	fclean all

.PHONY:	all clean fclean re

# ============================================================================= #
